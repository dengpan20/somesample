<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dengpan20.somesample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".SampleApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:usesCleartextTraffic="true">
        <activity android:name=".activity.CustomViewActivity">
        </activity>
        <activity android:name=".activity.RecyclerTabActivity"/>
        <activity
                android:name=".activity.VideoWebActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:hardwareAccelerated="true"/>
        <activity android:name=".activity.MPChartActivity"/>
        <activity android:name=".activity.PageTurningActivity"/>
        <activity android:name=".activity.ConstraitLayoutActivity"/>
        <activity android:name=".activity.XPopupActivity"/>

        <service android:name=".db.DBService"/>

        <activity android:name=".activity.RoomActivity"/>
        <activity android:name=".activity.SencodFloorActivity"/>
        <activity android:name=".activity.MVVMLoginActivity"/>
        <activity android:name=".activity.ApparLayoutActivity"/>
        <activity android:name=".activity.ToolBarActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>